<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="?attr/backgroundcolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/cardbackground"
        >


        <ImageView
            android:id="@+id/collection_image_view"
            android:layout_width="160dp"
            android:layout_height="96dp"
            android:layout_below="@+id/text_view_sgame_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:src="@mipmap/ic_launcher"
            />


        <TextView

            android:id="@+id/text_view_sgame_genres"
            android:layout_width="201dp"
            android:layout_height="68dp"
            android:textColor="?attr/textcolor"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/collection_image_view"
            android:layout_toRightOf="@+id/collection_image_view"
            android:text="Genres"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_sgame_title"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="?attr/textcolor"

            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:text="Title"
            android:textSize="22sp"
            android:textStyle="bold" />


    </RelativeLayout>

</android.support.v7.widget.CardView>